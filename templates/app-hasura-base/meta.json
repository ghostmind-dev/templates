{
  "id": "ex0tPgO5T87H",
  "name": "app-hasura-base",
  "type": "template",
  "terraform": {
    "core": {
      "path": "run",
      "global": false,
      "containers": [
        "default"
      ]
    }
  },
  "docker": {
    "default": {
      "root": "docker",
      "image": "gcr.io/ghostmind-core/templates-app-hasura-base",
      "env_based": false
    }
  },
  "compose": {
    "default": {
      "root": "local",
      "filename": "compose.yaml"
    }
  },
  "routines": {
    "dev": "run custom dev build up",
    "console": "run custom dev console",
    "activate": "run action local app-hasura-base -W --no-reuse"
  },
  "mcp": {
    "question-database": {
      "command": "npx",
      "args": [
        "mcp-graphql"
      ],
      "env": {
        "ENDPOINT": "http://localhost:5080/v1/graphql",
        "HEADERS": {
          "content-type": "application/json",
          "x-hasura-admin-secret": "148f4c16-2c6f-4f63-b3ab-3f52f44a2e77"
        },
        "ALLOW_MUTATIONS": "false"
      }
    }
  },
  "tags": [
    "app",
    "hasura",
    "db"
  ],
  "template": {
    "ignoreFolders": [],
    "ignoreFiles": [],
    "init": [
      "run custom start"
    ]
  },
  "secrets": {
    "base": "base"
  }
}
