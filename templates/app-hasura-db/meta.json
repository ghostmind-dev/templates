{
  "id": "lWatCfm3C45R",
  "name": "app-hasura-db",
  "type": "template",
  "terraform": {
    "core": {
      "path": "run",
      "global": false,
      "containers": [
        "default"
      ]
    }
  },
  "docker": {
    "default": {
      "root": "docker",
      "image": "gcr.io/ghostmind-core/templates-app-hasura-db",
      "env_based": false
    }
  },
  "compose": {
    "default": {
      "root": "local",
      "filename": "compose.yaml"
    }
  },
  "routines": {
    "dev": "run custom dev build up",
    "console": "run custom dev console",
    "activate": "run action local ${APP} -W --no-reuse"
  },
  "mcp": {
    "question-database": {
      "command": "npx",
      "args": [
        "mcp-graphql"
      ],
      "env": {
        "ENDPOINT": "${HASURA_GRAPHQL_ENDPOINT}/v1/graphql",
        "HEADERS": {
          "content-type": "application/json",
          "x-hasura-admin-secret": "${HASURA_GRAPHQL_ADMIN_SECRET}"
        },
        "ALLOW_MUTATIONS": "false"
      }
    }
  },
  "tags": [
    "app",
    "hasura",
    "db"
  ],
  "template": {
    "ignoreFolders": [],
    "ignoreFiles": [],
    "init": [
      "run custom start"
    ]
  },
  "secrets": {
    "base": "base"
  }
}