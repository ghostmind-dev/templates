{
  "name": "templates",
  "containerUser": "vscode",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/ghostmind-dev/features/settings:latest": {},
    "ghcr.io/ghostmind-dev/features/extensions:latest": {},
    "ghcr.io/ghostmind-dev/features/init:latest": {
      "resetLive": true
    },
    "ghcr.io/ghostmind-dev/features/zsh:latest": {
      "theme": "codespaces"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["github.vscode-github-actions"]
    }
  },
  "postStartCommand": "deno run -A -r jsr:@ghostmind/init",
  "postCreateCommand": "deno run -A /usr/local/share/post-create.ts",
  "containerEnv": {
    "SRC": "${containerWorkspaceFolder}",
    "LOCALHOST_SRC": "/Volumes/Projects/prototype/templates",
    "DOCKER_CONFIG": "/home/vscode/.docker-no-creds"
  },
  "remoteEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "VAULT_TOKEN": "${localEnv:VAULT_TOKEN}",
    "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
  },
  "mounts": [
    "source=/Volumes/Projects,target=/Volumes/Projects,type=bind",
    "source=terminal-history-templates,target=/commandhistory,type=volume",
    "source=/Volumes/Projects/config/source/.claude.json,target=/home/vscode/.claude.json,type=bind",
    "source=/Volumes/Projects/config/source/.ssh/config,target=/home/vscode/.ssh/config,type=bind",
    "type=bind,source=/run/host-services/ssh-auth.sock,target=/ssh-agent",
    "type=bind,source=${env:HOME}/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts"
  ],

  "runArgs": [
    "--cap-add=CAP_IPC_LOCK",
    "--cap-add=NET_ADMIN",
    "--network=host",
    "--env=SSH_AUTH_SOCK=/ssh-agent",
    "--name=templates"
  ]
}
